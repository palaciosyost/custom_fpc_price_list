<odoo>
    <!-- Acción para abrir la vista -->
    <record id="action_price_product_list" model="ir.actions.act_window">
        <field name="name">Historial de precios</field>
        <field name="res_model">price.product.list</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay historial de precios registrado todavía.
            </p>
        </field>
    </record>

    <!-- Vista tipo lista -->
    <record id="view_price_product_list_tree" model="ir.ui.view">
        <field name="name">price.product.list.tree</field>
        <field name="model">price.product.list</field>
        <field name="arch" type="xml">
            <tree string="Historial de precios" create="false">
                <field name="product_id"/>
                <field name="price"/>
                <field name="currency_id"/>
                <field name="date"/>
                <field name="user_id"/>
            </tree>
        </field>
    </record>

    <!-- Vista tipo formulario -->
    <record id="view_price_product_list_form" model="ir.ui.view">
        <field name="name">price.product.list.form</field>
        <field name="model">price.product.list</field>
        <field name="arch" type="xml">
            <form string="Historial de precios">
                <sheet>
                    <group>
                        <field name="product_id"/>
                        <field name="price"/>
                        <field name="currency_id"/>
                        <field name="date"/>
                        <field name="user_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Menú -->
    <menuitem id="menu_price_product_list"
              name="Historial de precios"
              parent="stock.menu_stock_inventory_control"
              action="action_price_product_list"
              sequence="50"/>
</odoo>
