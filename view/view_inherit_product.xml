<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inherit_view_product" model="ir.ui.view">
        <field name="name">product.template.view.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>        
        <field name="arch" type="xml">
            <xpath expr="//page[@name='general_information']" position="after">
                <page string="Historial de precios" groups="custom_fpc_price_list.group_view_historial">
                    <field name="precio_lista">
                        <tree editable="bottom">
                            <field name="fecha_registro"/>
                            <field name="cliente"/>
                            <field name="moneda_id"/>
                            <field name="precio_unitario"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <record id="view_kanban_price_product_inherit" model="ir.ui.view">
        <field name="name">product.template.price.kanban.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_kanban_view"/>
        <field name="arch" type="xml">
            <xpath expr="//strong[@class='o_kanban_record_title']"  position="after">
                <button name="action_open_precio_wizard" context="{'default_product_id': active_id}" type="object"  class="btn-link">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye-fill" viewBox="0 0 16 16">
                        <path d="M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0"/>
                        <path d="M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8m8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7"/>
                        </svg>
                </button>

            </xpath>
        </field>
    </record>



</odoo>
